{
  "name": "joypad-usb-controller",
  "version": "0.0.2",
  "description": "",
  "main": "build/index.js",
  "engines": {
    "node": "^14.x"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "purgue": "rimraf ./build && rimraf ./coverage && rimraf ./node_modules",
    "dev": "nodemon",
    "configure-device-step-one": "DEVICE_CONFIGURATION_MODE=yes DEVICE_CONFIGURATION_MODE_STEP=one npm run start",
    "configure-device-step-two": "DEVICE_CONFIGURATION_MODE=yes DEVICE_CONFIGURATION_MODE_STEP=two npm run start",
    "start": "npm run build && node build/index.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint && npm run test"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@types/node": "^14.17.0",
    "@types/usb": "^1.5.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "onchange": "^7.1.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "usb": "^1.7.2",
    "usb-detection": "^4.10.0"
  }
}
